(use-package orderless
  :ensure t
  :demand t
  :custom
  (completion-styles '(basic orderless))
  (orderless-matching-styles '(
			       orderless-literal
			       orderless-initialism
			       orderless-flex
			       orderless-regexp
			       ))
  (orderless-component-separator "[ _-]")
