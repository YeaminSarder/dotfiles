;; Startup time
(defun display-startup-time ()
  (message
   "Emacs loaded in %s with %d garbage collections."
   (emacs-init-time)
   gcs-done))

(add-hook 'emacs-startup-hook #'display-startup-time)
(setq inhibit-startup-screen t)


